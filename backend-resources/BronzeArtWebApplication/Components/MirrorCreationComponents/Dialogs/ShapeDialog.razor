@* Shape Dialog *@
@namespace BronzeArtWebApplication.Components.MirrorCreationComponents.Dialogs
@inject ILanguageContainerService languageContainer

<MudDialog @bind-Visible:get="@IsVisible" @bind-Visible:set="@IsVisibleChanged" Gutters="false" Class="ma-4" Style="max-width:95vw">
    <TitleContent>
        <MudText Typo="Typo.h6">
            @languageContainer.Keys["DialogShapeTitle"]
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudContainer Style="@($"max-height:80vh;overflow-y:auto;max-width:90vw;")">
            <MudGrid Justify="Justify.Center" Spacing="2" Class="px-5 py-5">
                <MudItem xs="12" sm="12" md="6" lg="6" xl="6" xxl="6" Class="d-flex justify-center align-center">
                    <MudPaper Elevation="0" Outlined="false" Class="ma-0 pa-0">
                        <MudButton Variant="Variant.Filled"
                                   FullWidth="true"
                                   Style="text-transform:none;height:100%"
                                   Class="ma-2"
                                   OnClick="(() => OnShapeClick.InvokeAsync(MirrorShape.Rectangular))">
                            <MudContainer Class="d-flex justify-center flex-column ma-1 pa-1" Style="max-width:90%">
                                <img src="/Images/MirrorsImages/AllRectangularMirrors2.jpg"
                                     alt="@languageContainer.Keys[MirrorShapeDescKey[MirrorShape.Rectangular]]"
                                     class="rounded-lg" />
                                <MudText>
                                    @languageContainer.Keys[MirrorShapeDescKey[MirrorShape.Rectangular]]
                                </MudText>
                            </MudContainer>
                        </MudButton>
                    </MudPaper>
                </MudItem>
                <MudItem xs="12" sm="12" md="6" lg="6" xl="6" xxl="6" Class="d-flex justify-center align-center">
                    <MudPaper Elevation="0" Outlined="false" Class="ma-0 pa-0">
                        <MudButton Variant="Variant.Filled"
                                   FullWidth="true"
                                   Style="text-transform:none;height:100%"
                                   Class="ma-2"
                                   OnClick="(() => OnShapeClick.InvokeAsync(MirrorShape.Circular))">
                            <MudContainer Class="d-flex justify-center flex-column ma-1 pa-1" Style="max-width:90%">
                                <img src="/Images/MirrorsImages/AllCircularMirrors.jpg"
                                     alt="@languageContainer.Keys[MirrorShapeDescKey[MirrorShape.Circular]]"
                                     class="rounded-lg" />
                                <MudText Style="text-transform:none">
                                    @languageContainer.Keys[MirrorShapeDescKey[MirrorShape.Circular]]
                                </MudText>
                            </MudContainer>
                        </MudButton>
                    </MudPaper>
                </MudItem>
                <MudItem xs="12" sm="12" md="6" lg="6" xl="6" xxl="6" Class="d-flex justify-center align-center">
                    <MudPaper Elevation="0" Outlined="false" Class="ma-0 pa-0">
                        <MudButton Variant="Variant.Filled"
                                   FullWidth="true"
                                   Style="text-transform:none;height:100%"
                                   Class="ma-2"
                                   OnClick="(() => OnShapeClick.InvokeAsync(MirrorShape.Capsule))">
                            <MudContainer Class="d-flex justify-center flex-column ma-1 pa-1" Style="max-width:90%">
                                <img src="/Images/MirrorsImages/AllCapsuleMirrors.jpg"
                                     alt="@languageContainer.Keys[MirrorShapeDescKey[MirrorShape.Capsule]]"
                                     class="rounded-lg" />
                                <MudText Style="text-transform:none">
                                    @languageContainer.Keys[MirrorShapeDescKey[MirrorShape.Capsule]]
                                </MudText>
                            </MudContainer>
                        </MudButton>
                    </MudPaper>
                </MudItem>
                <MudItem xs="12" sm="12" md="6" lg="6" xl="6" xxl="6" Class="d-flex justify-center align-center">
                    <MudPaper Elevation="0" Outlined="false" Class="ma-0 pa-0">
                        <MudButton Variant="Variant.Filled"
                                   FullWidth="true"
                                   Style="text-transform:none;height:100%"
                                   Class="ma-2"
                                   OnClick="(() => OnShapeClick.InvokeAsync(MirrorShape.Ellipse))">
                            <MudContainer Class="d-flex justify-center flex-column ma-1 pa-1" Style="max-width:90%">
                                <img src="/Images/MirrorsImages/AllEllipseMirrors.jpg"
                                     alt="@languageContainer.Keys[MirrorShapeDescKey[MirrorShape.Ellipse]]"
                                     class="rounded-lg" />
                                <MudText Style="text-transform:none">
                                    @languageContainer.Keys[MirrorShapeDescKey[MirrorShape.Ellipse]]
                                </MudText>
                            </MudContainer>
                        </MudButton>
                    </MudPaper>
                </MudItem>
            </MudGrid>
        </MudContainer>
    </DialogContent>
</MudDialog>

@code {
    [Parameter]
    public bool IsVisible { get; set; }
    [Parameter] public EventCallback<bool> IsVisibleChanged { get; set; }

    [Parameter] public EventCallback<MirrorShape> OnShapeClick { get; set; }
}
