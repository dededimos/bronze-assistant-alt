@namespace BronzeArtWebApplication.Components.UniversalComponents


@*DEPRECATED NOT USED UNTIL WE FIGURE OUT HOW TO IMPLEMENT ALL THE LINK REL WITHOUT HAVING TO REMOVE THEM FROM THE MAIN INDEX.HTML*@
<PageTitle>@(PageTitle)</PageTitle>
<HeadContent>
    <meta name="description" content="@(PageDescription)"/> @*A Small Description for the Page -- Getting read by Crawlers*@
    <link rel="canonical" href="@($"{BaseUri}{RelativePathToBaseUri}")" /> @*Provides the canonical URL address for the Current Page*@
    <meta name="robots" content="@(AllowCrawling ? "index, follow" : "noindex")" /> @*Wheather to Allow crawlers to this Page*@
    
    @*Shearch engines show the right Language to the right audience -- and content is not duplicated*@
    <link rel="alternate" hreflang="en" href="@($"{BaseUri}{RelativePathToBaseUri}/en")"/>
    <link rel="alternate" hreflang="it" href="@($"{BaseUri}{RelativePathToBaseUri}/it")"/>
    <link rel="alternate" hreflang="el" href="@($"{BaseUri}{RelativePathToBaseUri}/el")"/>
</HeadContent>

