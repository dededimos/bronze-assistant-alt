@*A Dialog containing the news of each Version*@
@namespace BronzeArtWebApplication.Components.UniversalComponents
@inject ILanguageContainerService lc

<MudDialog @bind-Visible:get="@IsVisible"
           @bind-Visible:set="@IsVisibleChanged"
           Gutters="@(false)"
           Class="ma-4 pa-0"
           ContentStyle="background:var(--customDark)"
           ContentClass="pa-0 ma-0 rounded-tr-0 rounded-tl-0"
           Style="max-width:95vw;">
    <TitleContent>
        <MudText Typo="Typo.h6">
            @lc.Keys["NewsDialogTitle"]
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudContainer Style="max-height:80vh;overflow-y:auto;max-width:90vw;background:inherit" Class="pa-5">
            @foreach (var item in news)
            {
                <MudText Align="@(Align.Left)" Typo="@(Typo.subtitle1)" Class="mt-3" Style="text-decoration:underline;color:ghostwhite">
                    @(lc.Keys[item.title])
                </MudText>
                @foreach (var description in item.descriptions)
                {
                    <MudText Align="@(Align.Left)" Typo="@(Typo.body1)" Style="color:ghostwhite" Class="py-1">
                        @(lc.Keys[description])
                    </MudText>
                }
            }
        </MudContainer>
    </DialogContent>
</MudDialog>

