@*The Primary Window Containing the Openings Story*@
@namespace BronzeArtWebApplication.Pages.CabinsPage.Components.WindowsComponents.OpeningsWindows
@using ShowerEnclosuresModelsLibrary.Enums.CabinCategories
@using static BronzeArtWebApplication.Shared.Helpers.StaticInfoCabins
@using static BronzeArtWebApplication.Shared.Helpers.StylesStaticInfoCabins
@inject ILanguageContainerService lc
@inject AssembleCabinViewModel vm

<StoryContainer Title = "@(lc.Keys["OpeningsWindowTitle"])" 
                @bind-IsVisible = "@(vm.IsWindowVisible[StoryWindow.OpeningPrimary])" 
                IsNextButtonVisible = "@(false)"
                IsPreviousButtonVisible = "@(true)"
                OnPreviousClick = "(()=> vm.ShowWindow(StoryWindow.StartWindow,StoryWindow.OpeningPrimary))"
                OnResetClick = "@(()=> vm.ResetViewModel())">
    <MainContent>
        <MudGrid Justify="Justify.Center" Spacing="2" Class="px-5 py-5">
                @foreach (OpeningCategory opening in Enum.GetValues(typeof(OpeningCategory)))
                    {
                     <MudItem md="12" lg="6" Class="d-flex justify-center align-center">
                         <MudButton Variant="Variant.Filled"
                                    FullWidth="true"
                                    Style="text-transform:none"
                                    Class="ma-2"
                                    OnClick = "@(()=> HandleSelection(opening))">
                             <MudContainer Class="d-flex justify-center flex-column ma-1 pa-1" Style="max-width:90%">
                                 <img src="@(OpeningImagePaths[opening])"
                                      alt="@lc.Keys[OpeningDescKey[opening]]"
                                      class="rounded-lg" />
                                 <MudText Typo="Typo.h6">
                                     @lc.Keys[OpeningDescKey[opening]]
                                 </MudText>
                             </MudContainer>
                         </MudButton>
                     </MudItem>   
                    }
            </MudGrid>
    </MainContent>
</StoryContainer>


