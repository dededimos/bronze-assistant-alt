<UserControl x:Class="BronzeFactoryApplication.Views.ComponentsUC.BathAccessoriesViews.BathAccessoryEntityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:BronzeFactoryApplication.ViewModels.AccessoriesViewModels"
             xmlns:local="clr-namespace:BronzeFactoryApplication.Views.ComponentsUC.BathAccessoriesViews"
             xmlns:helpers="clr-namespace:BronzeFactoryApplication.Helpers"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:b="clr-namespace:BronzeFactoryApplication.Helpers.Behaviours"
             xmlns:cachedImage="clr-namespace:CachedImage.Core;assembly=CachedImage.Core"
             xmlns:photoSizeEnum="clr-namespace:AzureBlobStorageLibrary;assembly=AzureBlobStorageLibrary"
             xmlns:cc="clr-namespace:TasCustomControlsLibrary.CustomControls;assembly=TasCustomControlsLibrary"
             xmlns:globalCommands="clr-namespace:BronzeFactoryApplication.Helpers"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:BathAccessoryEntityViewModel}">
    <UserControl.Resources>
        <Style TargetType="TextBlock"
               BasedOn="{StaticResource TextBlockBaseStyle}"
               x:Key="LocalizedStringVmTextBlockStyle">
            <Setter Property="Width"
                    Value="150" />
            <Setter Property="TextAlignment"
                    Value="Left" />
        </Style>
    </UserControl.Resources>
    <Grid x:Name="AccessoryEntityGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="490" />
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="580" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Text="{StaticResource lngAccessoryProperties}"
                   HorizontalAlignment="Left"
                   TextAlignment="Center"
                   TextDecorations="Underline"
                   Margin="0"
                   Style="{StaticResource CHeaderTextBlock}"
                   VerticalAlignment="Top"
                   Grid.Row="0"
                   Grid.Column="0" />
        <hc:Divider Grid.Row="0"
                    Grid.RowSpan="7"
                    Grid.Column="1"
                    Margin="0,0,0,15"
                    Orientation="Vertical"
                    LineStroke="{DynamicResource BorderBrush}" />

        <!-- COLUMN 1 -->

        <!--#region 1-2. Descriptions -->
        <StackPanel Grid.Column="0"
                    Grid.Row="1"
                    Grid.RowSpan="2"
                    VerticalAlignment="Center">
            <!--#region Name -->
            <StackPanel Orientation="Horizontal"
                        x:Name="NameStackPanel">
                <Button Style="{StaticResource EditLocalizedStringVmButtonStyle}"
                        Command="{Binding EditLocalizedStringCommand}"
                        CommandParameter="Name" />
                <TextBlock Text="{StaticResource lngName}"
                           Style="{StaticResource LocalizedStringVmTextBlockStyle}" />
                <TextBlock Text=" : "
                           VerticalAlignment="Center" />
                <TextBlock Text="{Binding BaseDescriptiveEntity.Name.MinifiedDefaultValue}"
                           VerticalAlignment="Center" />
            </StackPanel>
            <!--#endregion-->

            <!--#region Description -->
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource EditLocalizedStringVmButtonStyle}"
                        Command="{Binding EditLocalizedStringCommand}"
                        CommandParameter="Description" />
                <TextBlock Text="{StaticResource lngDescription}"
                           Style="{StaticResource LocalizedStringVmTextBlockStyle}" />
                <TextBlock Text=" : "
                           VerticalAlignment="Center" />
                <TextBlock Text="{Binding BaseDescriptiveEntity.Description.MinifiedDefaultValue}"
                           VerticalAlignment="Center" />
            </StackPanel>
            <!--#endregion-->

            <!--#region Extended Description -->
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource EditLocalizedStringVmButtonStyle}"
                        Command="{Binding EditLocalizedStringCommand}"
                        CommandParameter="ExtendedDescription" />
                <TextBlock Text="{StaticResource lngExtendedDescription}"
                           Style="{StaticResource LocalizedStringVmTextBlockStyle}" />
                <TextBlock Text=" : "
                           VerticalAlignment="Center" />
                <TextBlock Text="{Binding BaseDescriptiveEntity.ExtendedDescription.MinifiedDefaultValue}"
                           VerticalAlignment="Center" />
            </StackPanel>
            <!--#endregion-->

            <!--#region IsOnline & UsesOnly Main Code & SortNo -->
            <DockPanel>
                <StackPanel x:Name="SortNoStackPanel"
                            Margin="0,5"
                            Grid.Row="3"
                            Grid.Column="0">
                    <DockPanel>
                        <cc:Icon ToolTip="{StaticResource lngSortNoTooltip}"
                                 Style="{StaticResource CInfoTooltipIcon}" />
                        <TextBlock x:Name="SortNoTextBlock"
                                   Style="{StaticResource TitleTextBlockStyle}"
                                   Text="{StaticResource lngSortNo}">
                        </TextBlock>
                    </DockPanel>
                    <TextBox x:Name="SortNoTextBox"
                             d:Text="99999"
                             Text="{Binding SortNo ,Mode=TwoWay, TargetNullValue=''}"
                             MaxLength="5">
                        <i:Interaction.Behaviors>
                            <b:TextBoxNumericInputBehavior Precision="0"
                                                           InputMode="DigitInput" />
                        </i:Interaction.Behaviors>
                    </TextBox>
                </StackPanel>
                <StackPanel Margin="30,5,0,0"
                            HorizontalAlignment="Right">
                    <DockPanel Margin="0,5"
                               HorizontalAlignment="Left">
                        <cc:Icon ToolTip="{StaticResource lngIsOnlineStatusTooltipAccessory}"
                                 Style="{StaticResource CInfoTooltipIcon}"
                                 Margin="10,0,5,0" />
                        <CheckBox IsChecked="{Binding IsOnline}"
                                  Content="{StaticResource lngIsOnlineStatus}" />
                    </DockPanel>
                    <DockPanel Margin="0,5"
                               HorizontalAlignment="Left">
                        <cc:Icon ToolTip="{StaticResource lngUsesOnlyMainCodeTooltipAccessory}"
                                 Style="{StaticResource CInfoTooltipIcon}"
                                 Margin="10,0,5,0" />
                        <CheckBox IsChecked="{Binding UsesOnlyMainCode}"
                                  Content="{StaticResource lngUsesOnlyMainCode}" />
                    </DockPanel>
                </StackPanel>
            </DockPanel>
            <!--#endregion-->
        </StackPanel>
        <!--#endregion-->
        <!--#region 3.MainCode & Extra Code -->
        <Grid x:Name="MainCodeExtraCodeGrid"
              Margin="0,5"
              Grid.Row="3"
              Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel x:Name="MainCodeStackPanel"
                        Grid.Column="0"
                        Margin="0,0,5,0">
                <DockPanel>
                    <cc:Icon ToolTip="{StaticResource lngMainCodeTooltipAccessory}"
                             Style="{StaticResource CInfoTooltipIcon}" />
                    <TextBlock x:Name="MainCodeTextBlock"
                               Style="{StaticResource TitleTextBlockStyle}"
                               Text="{StaticResource lngMainCode}">
                    </TextBlock>
                </DockPanel>
                <TextBox x:Name="MainCodeTextBox"
                         d:Text="5150"
                         Text="{Binding MainCode ,Mode=TwoWay, TargetNullValue=''}"
                         MaxLength="15">
                </TextBox>
            </StackPanel>
            <StackPanel x:Name="ExtraCodeStackPanel"
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        IsEnabled="{Binding UsesOnlyMainCode, Converter={StaticResource Boolean2BooleanReConverter}}">
                <DockPanel>
                    <cc:Icon ToolTip="{StaticResource lngExtraCodeTooltipAccessory}"
                             Style="{StaticResource CInfoTooltipIcon}" />
                    <TextBlock x:Name="ExtraCodeTextBlock"
                               Style="{StaticResource TitleTextBlockStyle}"
                               Text="{StaticResource lngExtraCode}">
                    </TextBlock>
                </DockPanel>
                <TextBox x:Name="ExtraCodeTextBox"
                         d:Text="K"
                         Text="{Binding ExtraCode ,Mode=TwoWay, TargetNullValue=''}"
                         MaxLength="10">
                </TextBox>
            </StackPanel>
        </Grid>
        <!--#endregion-->
        <!--#region 4.Material & Shape -->
        <Grid x:Name="MaterialShapeGrid"
              Margin="0,5"
              Grid.Row="4"
              Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel x:Name="MaterialStackPanel"
                        Grid.Column="0"
                        Margin="0,0,5,0">
                <DockPanel>
                    <cc:Icon ToolTip="{StaticResource lngMaterial}"
                             Style="{StaticResource CInfoTooltipIcon}" />
                    <TextBlock x:Name="MaterialTextBlock"
                               Style="{StaticResource TitleTextBlockStyle}"
                               Text="{StaticResource lngMaterial}">
                    </TextBlock>
                </DockPanel>
                <ComboBox x:Name="MaterialComboBox"
                          ItemsSource="{Binding MaterialTraits, Mode=OneWay}"
                          SelectedValue="{Binding SelectedMaterialId}"
                          SelectedValuePath="IdAsString"
                          HorizontalContentAlignment="Stretch">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Trait,Converter={StaticResource LocalizedStringConverter} }" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
            <StackPanel x:Name="ShapeStackPanel"
                        Margin="5,0,0,0"
                        Grid.Column="1">
                <DockPanel>
                    <cc:Icon ToolTip="{StaticResource lngShape}"
                             Style="{StaticResource CInfoTooltipIcon}" />
                    <TextBlock x:Name="ShapeTextBlock"
                               Style="{StaticResource TitleTextBlockStyle}"
                               Text="{StaticResource lngShape}">
                    </TextBlock>
                </DockPanel>
                <ComboBox x:Name="ShapeComboBox"
                          ItemsSource="{Binding ShapeTraits, Mode=OneWay}"
                          SelectedValue="{Binding SelectedShapeId}"
                          SelectedValuePath="IdAsString"
                          HorizontalContentAlignment="Stretch">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Trait,Converter={StaticResource LocalizedStringConverter} }" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </Grid>
        <!--#endregion-->
        <!--#region 5 Default Finish -->
        <StackPanel VerticalAlignment="Center"
                    Margin="0,5"
                    Grid.Row="5"
                    Grid.Column="0">
            <DockPanel>
                <cc:Icon ToolTip="{StaticResource lngDefaultFinishTooltip}"
                         Style="{StaticResource CInfoTooltipIcon}" />
                <TextBlock Style="{StaticResource TitleTextBlockStyle}"
                           Text="{StaticResource lngDefaultFinish}">
                </TextBlock>
            </DockPanel>
            <ComboBox x:Name="AvailableDefaultFinishesComboBox"
                      ItemsSource="{Binding AvailableDefaultFinishes, Mode=OneWay}"
                      SelectedValue="{Binding SelectedFinishId}"
                      SelectedValuePath="IdAsString"
                      MinHeight="60"
                      HorizontalContentAlignment="Stretch"
                      VerticalAlignment="Center"
                      MaxDropDownHeight="500">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <DockPanel HorizontalAlignment="Stretch"
                                   LastChildFill="True">
                            <cachedImage:Image ImageUrl="{Binding PhotoURL, Converter={StaticResource BlobUrlConverter}, ConverterParameter={x:Static photoSizeEnum:BlobPhotoSize.ThumbSizePhoto}}"
                                               FailedImage="{StaticResource DefaultNoImage}"
                                               Width="70"
                                               Height="50"
                                               Stretch="Uniform"
                                               HorizontalAlignment="Center" />
                            <TextBlock Text="{Binding Trait,Converter={StaticResource LocalizedStringConverter} }"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       DockPanel.Dock="Right"
                                       TextAlignment="Center" />
                        </DockPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
        <!--#endregion-->

        <hc:Divider LineStroke="{DynamicResource BorderBrush}"
                    Orientation="Horizontal"
                    Grid.Row="6"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Margin="20,5" />

        <!--#region 7-8.Available Finishes -->
        <DockPanel x:Name="AvailableFinishesDockPanel"
                   Margin="0,5,15,5"
                   VerticalAlignment="Center"
                   Grid.Row="7"
                   Grid.RowSpan="2"
                   Grid.Column="0"
                   Grid.ColumnSpan="2">

            <StackPanel DockPanel.Dock="Right">
                <DockPanel>
                    <cc:Icon ToolTip="{StaticResource lngAvailableFinishesTooltip}"
                             Style="{StaticResource CInfoTooltipIcon}" />
                    <TextBlock x:Name="AvailableFinishesTextBlock"
                               Style="{StaticResource TitleTextBlockStyle}"
                               Text="{StaticResource lngAvailableFinishes}">
                    </TextBlock>
                </DockPanel>
                <ListBox ItemsSource="{Binding AvailableFinishes}"
                         SelectedItem="{Binding SelectedAvailableFinish}"
                         Height="130"
                         DockPanel.Dock="Right"
                         Width="230">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <DockPanel LastChildFill="True">
                                <Button Style="{StaticResource ButtonIconCircular.Small}"
                                        Foreground="{DynamicResource DangerBrush}"
                                        hc:IconElement.Geometry="{StaticResource RemoveGeometry}"
                                        hc:IconElement.Height="8"
                                        BorderBrush="{DynamicResource DangerBrush}"
                                        Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor} , Path=DataContext.RemoveAvailableFinishCommand}"
                                        CommandParameter="{Binding .}" />
                                <cachedImage:Image ImageUrl="{Binding Finish.PhotoURL, Converter={StaticResource BlobUrlConverter}, ConverterParameter={x:Static photoSizeEnum:BlobPhotoSize.ThumbSizePhoto}}"
                                                   FailedImage="{StaticResource DefaultNoImage}"
                                                   Height="19"
                                                   Stretch="Uniform"
                                                   Margin="10,0" />
                                <TextBlock Text="{Binding Finish.Trait, Converter={StaticResource LocalizedStringConverter}}"
                                           VerticalAlignment="Center"
                                           TextAlignment="Center"
                                           Margin="10,0" />
                            </DockPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
            <DockPanel>
                <DockPanel DockPanel.Dock="Top">
                    <!--#region Add Finish Button -->
                    <Button Style="{StaticResource ButtonIconCircular}"
                            hc:IconElement.Geometry="{StaticResource AddGeometry}"
                            Foreground="{DynamicResource SuccessBrush}"
                            Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.AddAvailableFinishCommand}"
                            CommandParameter="{Binding ElementName=AllFinishesComboBox, Path=SelectedItem}"
                            DockPanel.Dock="Right"
                            Margin="0,22,10,0" />
                    <!--#endregion-->
                    <!--#region ComboBox Selector -->
                    <StackPanel VerticalAlignment="Center"
                                Margin="10,0">

                        <DockPanel>
                            <cc:Icon ToolTip="{StaticResource lngFinishToAddTooltip}"
                                     Style="{StaticResource CInfoTooltipIcon}" />
                            <TextBlock Style="{StaticResource TitleTextBlockStyle}"
                                       Text="{StaticResource lngFinishToAdd}">
                            </TextBlock>
                        </DockPanel>
                        <ComboBox x:Name="AllFinishesComboBox"
                                  ItemsSource="{Binding FinishTraits, Mode=OneWay}"
                                  SelectedItem="{Binding SelectedAccessoryFinishVariation}"
                                  MinHeight="60"
                                  HorizontalContentAlignment="Stretch"
                                  VerticalAlignment="Center"
                                  MaxDropDownHeight="500">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel HorizontalAlignment="Stretch"
                                               LastChildFill="True">
                                        <cachedImage:Image ImageUrl="{Binding PhotoURL, Converter={StaticResource BlobUrlConverter}, ConverterParameter={x:Static photoSizeEnum:BlobPhotoSize.ThumbSizePhoto}}"
                                                           FailedImage="{StaticResource DefaultNoImage}"
                                                           Width="70"
                                                           Height="50"
                                                           Stretch="Uniform"
                                                           HorizontalAlignment="Center" />
                                        <TextBlock Text="{Binding Trait,Converter={StaticResource LocalizedStringConverter} }"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   DockPanel.Dock="Right"
                                                   TextAlignment="Center" />
                                    </DockPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    <!--#endregion-->
                </DockPanel>
                <DockPanel>
                    <!--#region Add FinishGroup Button -->
                    <Button Style="{StaticResource ButtonIconCircular}"
                            hc:IconElement.Geometry="{StaticResource AddGeometry}"
                            Foreground="{DynamicResource SuccessBrush}"
                            Command="{Binding AddAvailableFinishByGroupCommand}"
                            DockPanel.Dock="Right"
                            ToolTip="{StaticResource lngAddFinishGroupTooltip}"
                            Margin="0,22,10,0"
                            Height="25"
                            Width="25" />
                    <!--#endregion-->
                    <!--#region ComboBox Add Group Selector -->
                    <StackPanel VerticalAlignment="Center"
                                Margin="10,0">
                        <DockPanel>
                            <cc:Icon ToolTip="{StaticResource lngNewFinishGroupTooltip}"
                                     Style="{StaticResource CInfoTooltipIcon}" />
                            <TextBlock Style="{StaticResource TitleTextBlockStyle}"
                                       Text="{StaticResource lngNewFinishGroup}">
                            </TextBlock>
                        </DockPanel>
                        <ComboBox x:Name="FinishTraitGroupsComboBox"
                                  ItemsSource="{Binding FinishTraitGroups, Mode=OneWay}"
                                  SelectedItem="{Binding SelectedFinishGroupToAdd}"
                                  HorizontalContentAlignment="Stretch"
                                  VerticalAlignment="Center"
                                  MaxDropDownHeight="500">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name,Converter={StaticResource LocalizedStringConverter} }"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    <!--#endregion-->
                </DockPanel>
            </DockPanel>
        </DockPanel>
        <!--#endregion-->

        <!-- COLUMN 2 -->
        <!--#region 0-2.Images - Pdf Files -->
        <DockPanel Grid.Row="0"
                   Grid.RowSpan="3"
                   Grid.Column="2">
            <DockPanel.Resources>
                <Style TargetType="Border"
                       BasedOn="{StaticResource CPhotoControlBorder}" />
            </DockPanel.Resources>

            <!--#region Main Photo Url Control -->
            <Border>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="140" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock Style="{StaticResource CSmallInfoTextBlock}"
                               Text="{StaticResource lngMainPhotoUrl}"
                               Grid.Row="0"
                               Grid.Column="1"
                               VerticalAlignment="Center" />
                    <!--#region Buttons StackPanel -->
                    <StackPanel Grid.Row="0"
                                Grid.RowSpan="2"
                                Grid.Column="0"
                                VerticalAlignment="Top">
                        <!--#region Select Photo Button -->
                        <Button Style="{StaticResource ButtonIcon}"
                                hc:IconElement.Geometry="{StaticResource EditGeometry}"
                                hc:IconElement.Height="13"
                                Margin="7"
                                Height="auto"
                                Padding="0"
                                VerticalAlignment="Top"
                                Foreground="{DynamicResource SecondaryBrush}"
                                Command="{Binding ChangeMainPhotoUrlCommand}"
                                ToolTip="{StaticResource lngSelectNewPhoto}"
                                ToolTipService.Placement="Left"
                                ToolTipService.VerticalOffset="-15"
                                ToolTipService.InitialShowDelay="0" />
                        <!--#endregion-->
                        <!--#region Open Photo Viewer Button -->
                        <Button hc:IconElement.Geometry="{StaticResource EyeOpenGeometry}"
                                hc:IconElement.Height="10"
                                Margin="7"
                                Padding="0"
                                Height="auto"
                                VerticalAlignment="Top"
                                Command="{Binding OpenImageViewerCommand}"
                                CommandParameter="{Binding MainPhotoUrl , Converter={StaticResource BlobUrlConverter}, ConverterParameter={x:Static photoSizeEnum:BlobPhotoSize.MediumSizePhoto}}"
                                Style="{StaticResource ButtonIcon}"
                                Foreground="{DynamicResource SecondaryBrush}"
                                ToolTip="{StaticResource lngInspectPhoto}"
                                ToolTipService.Placement="Left"
                                ToolTipService.VerticalOffset="-15"
                                ToolTipService.HorizontalOffset="2"
                                ToolTipService.InitialShowDelay="0" />
                        <!--#endregion-->
                        <!--#region Info Tooltip -->
                        <cc:Icon GeometryData="{StaticResource InfoGeometry}"
                                 Height="14"
                                 Margin="7"
                                 Padding="0"
                                 VerticalAlignment="Top"
                                 Fill="{DynamicResource SecondaryBrush}"
                                 ToolTip="{Binding MainPhotoUrl}"
                                 ToolTipService.Placement="Left"
                                 ToolTipService.VerticalOffset="-15"
                                 ToolTipService.HorizontalOffset="2"
                                 ToolTipService.InitialShowDelay="0" />
                        <!--#endregion-->
                        <!--#region Remove Photo -->
                        <Button Style="{StaticResource ButtonIcon}"
                                hc:IconElement.Geometry="{StaticResource DeleteFillCircleGeometry}"
                                hc:IconElement.Height="14"
                                Margin="0,40,0,0"
                                Height="auto"
                                Padding="0"
                                VerticalAlignment="Top"
                                Foreground="{DynamicResource DangerBrush}"
                                Command="{Binding RemoveMainPhotoUrlCommand}"
                                ToolTip="{StaticResource lngRemoveImage}"
                                ToolTipService.Placement="Left"
                                ToolTipService.VerticalOffset="-15"
                                ToolTipService.InitialShowDelay="0" />
                        <!--#endregion-->
                    </StackPanel>
                    <!--#endregion-->
                    <!--#region Buttons Divider -->
                    <hc:Divider Grid.Column="1"
                                Grid.RowSpan="2"
                                HorizontalAlignment="Left"
                                Margin="0"
                                Orientation="Vertical"
                                LineStroke="{DynamicResource SecondaryBorderBrush}" />
                    <!--#endregion-->
                    <!--#region MainUrlImage -->
                    <cachedImage:Image Source="{Binding MainPhotoUrl,Converter={StaticResource BlobUrlConverter}, ConverterParameter={x:Static photoSizeEnum:BlobPhotoSize.SmallSizePhoto},Mode=OneWay,FallbackValue={StaticResource DefaultNoImage}}"
                                       FailedImage="{StaticResource DefaultNoImage}"
                                       Width="110"
                                       Margin="10,0,0,0"
                                       HorizontalAlignment="Center"
                                       Height="130"
                                       Stretch="Uniform"
                                       Grid.Row="1"
                                       Grid.Column="1" />
                    <!--#endregion-->
                </Grid>
            </Border>
            <!--#endregion-->

            <!--#region Dimensions Photo Url Control -->
            <Border Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="140" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock Style="{StaticResource CSmallInfoTextBlock}"
                               Text="{StaticResource lngDimensionPhotoUrl}"
                               Grid.Row="0"
                               Grid.Column="1"
                               VerticalAlignment="Center" />
                    <!--#region Buttons StackPanel -->
                    <StackPanel Grid.Row="0"
                                Grid.RowSpan="2"
                                Grid.Column="0"
                                VerticalAlignment="Top">
                        <!--#region Select Photo Button -->
                        <Button Style="{StaticResource ButtonIcon}"
                                hc:IconElement.Geometry="{StaticResource EditGeometry}"
                                hc:IconElement.Height="13"
                                Margin="7"
                                Height="auto"
                                Padding="0"
                                VerticalAlignment="Top"
                                Foreground="{DynamicResource SecondaryBrush}"
                                Command="{Binding ChangeDimensionsPhotoUrlCommand}"
                                ToolTip="{StaticResource lngSelectNewPhoto}"
                                ToolTipService.Placement="Left"
                                ToolTipService.VerticalOffset="-15"
                                ToolTipService.InitialShowDelay="0" />
                        <!--#endregion-->
                        <!--#region Open Photo Viewer Button -->
                        <Button hc:IconElement.Geometry="{StaticResource EyeOpenGeometry}"
                                hc:IconElement.Height="10"
                                Margin="7"
                                Padding="0"
                                Height="auto"
                                VerticalAlignment="Top"
                                Command="{Binding OpenImageViewerCommand}"
                                CommandParameter="{Binding DimensionsPhotoUrl , Converter={StaticResource BlobUrlConverter}, ConverterParameter={x:Static photoSizeEnum:BlobPhotoSize.MediumSizePhoto}}"
                                Style="{StaticResource ButtonIcon}"
                                Foreground="{DynamicResource SecondaryBrush}"
                                ToolTip="{StaticResource lngInspectPhoto}"
                                ToolTipService.Placement="Left"
                                ToolTipService.VerticalOffset="-15"
                                ToolTipService.HorizontalOffset="2"
                                ToolTipService.InitialShowDelay="0" />
                        <!--#endregion-->
                        <!--#region Info Tooltip -->
                        <cc:Icon GeometryData="{StaticResource InfoGeometry}"
                                 Height="14"
                                 Margin="7"
                                 Padding="0"
                                 VerticalAlignment="Top"
                                 Fill="{DynamicResource SecondaryBrush}"
                                 ToolTip="{Binding DimensionsPhotoUrl}"
                                 ToolTipService.Placement="Left"
                                 ToolTipService.VerticalOffset="-15"
                                 ToolTipService.HorizontalOffset="2"
                                 ToolTipService.InitialShowDelay="0" />
                        <!--#endregion-->
                        <!--#region Remove Photo -->
                        <Button Style="{StaticResource ButtonIcon}"
                                hc:IconElement.Geometry="{StaticResource DeleteFillCircleGeometry}"
                                hc:IconElement.Height="14"
                                Margin="0,40,0,0"
                                Height="auto"
                                Padding="0"
                                VerticalAlignment="Top"
                                Foreground="{DynamicResource DangerBrush}"
                                Command="{Binding RemoveDimensionsPhotoUrlCommand}"
                                ToolTip="{StaticResource lngRemoveImage}"
                                ToolTipService.Placement="Left"
                                ToolTipService.VerticalOffset="-15"
                                ToolTipService.InitialShowDelay="0" />
                        <!--#endregion-->
                    </StackPanel>
                    <!--#endregion-->
                    <!--#region Buttons Divider -->
                    <hc:Divider Grid.Column="1"
                                Grid.RowSpan="2"
                                HorizontalAlignment="Left"
                                Margin="0"
                                Orientation="Vertical"
                                LineStroke="{DynamicResource SecondaryBorderBrush}" />
                    <!--#endregion-->
                    <!--#region DimUrlImage -->
                    <cachedImage:Image Source="{Binding DimensionsPhotoUrl,Converter={StaticResource BlobUrlConverter}, ConverterParameter={x:Static photoSizeEnum:BlobPhotoSize.SmallSizePhoto},Mode=OneWay,FallbackValue={StaticResource DefaultNoImage}}"
                                       FailedImage="{StaticResource DefaultNoImage}"
                                       Width="110"
                                       Margin="10,0,0,0"
                                       HorizontalAlignment="Center"
                                       Height="130"
                                       Stretch="Uniform"
                                       Grid.Row="1"
                                       Grid.Column="1" />
                    <!--#endregion-->
                </Grid>
            </Border>
            <!--#endregion-->

            <!--#region Extra Photos Url Control -->
            <Border Margin="10,0,0,0" Padding="5">
                <DockPanel>
                    <!--#region Title With Add Button -->
                    <StackPanel DockPanel.Dock="Top"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,0,-20,0">
                        <TextBlock Text="{StaticResource lngExtraPhotosUrl}"
                                   Style="{StaticResource CSmallInfoTextBlock}" />
                        <Button hc:IconElement.Geometry="{StaticResource AddGeometry}"
                                hc:IconElement.Height="12"
                                Height="auto"
                                Padding="0"
                                BorderThickness="0"
                                Foreground="{DynamicResource SecondaryBrush}"
