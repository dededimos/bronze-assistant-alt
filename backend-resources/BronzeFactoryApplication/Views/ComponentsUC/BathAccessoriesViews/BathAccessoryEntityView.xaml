                    <StackPanel VerticalAlignment="Center">
                        <DockPanel>
                            <cc:Icon ToolTip="{StaticResource lngDimensions}"
                                     Style="{StaticResource CInfoTooltipIcon}" />
                            <TextBlock x:Name="DimensionsTextBlock"
                                       Style="{StaticResource TitleTextBlockStyle}"
                                       Text="{StaticResource lngDimensions}">
                            </TextBlock>
                        </DockPanel>
                        <ListBox ItemsSource="{Binding SelectedDimensions}"
                                 MinWidth="300"
                                 Width="auto">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel LastChildFill="True">
                                        <Button Style="{StaticResource ButtonIconCircular.Small}"
                                                Foreground="{DynamicResource DangerBrush}"
                                                hc:IconElement.Geometry="{StaticResource RemoveGeometry}"
                                                hc:IconElement.Height="8"
                                                BorderBrush="{DynamicResource DangerBrush}"
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor} , Path=DataContext.RemoveDimensionCommand}"
                                                CommandParameter="{Binding .}" />
                                        <TextBlock Text="{Binding Trait.Trait , Converter={StaticResource LocalizedStringConverter}}"
                                                   VerticalAlignment="Center"
                                                   TextAlignment="Center"
                                                   Margin="20,0"
                                                   Width="200" />
                                        <hc:Divider Orientation="Vertical"
                                                    LineStroke="{DynamicResource PrimaryBrush}" />
                                        <TextBlock Text="{Binding Value, StringFormat={}{0:0} mm}"
                                                   VerticalAlignment="Center"
                                                   TextAlignment="Right"
                                                   Width="80" />
                                    </DockPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                    <!--#endregion-->

                    <!--#region ComboBox with Add Button -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="20,0,0,0">
                        <StackPanel>
                            <DockPanel>
                                <cc:Icon  ToolTip="{StaticResource lngNewDimensionTooltip}"
                                          Style="{StaticResource CInfoTooltipIcon}" />
                                <TextBlock  x:Name="AddDimensionTextBlock"
                                            Style="{StaticResource TitleTextBlockStyle}"
                                            Text="{StaticResource lngNewDimension}">
                                </TextBlock>
                            </DockPanel>
                            <ComboBox  x:Name="AllDimensionsComboBox"
                                       ItemsSource="{Binding DimensionsTraits}"
                                       SelectedItem="{Binding SelectedDimension}"
                                       Width="150"
                                       Margin="0,0,0,20"
                                       VerticalAlignment="Center">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Trait, Converter={StaticResource LocalizedStringConverter}}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <DockPanel>
                                <cc:Icon  ToolTip="{StaticResource lngNewDimensionValueTooltip}"
                                          Style="{StaticResource CInfoTooltipIcon}" />
                                <TextBlock  x:Name="AddDimensionValueTextBlock"
                                            Style="{StaticResource TitleTextBlockStyle}"
                                            Text="{StaticResource lngNewDimensionValue}">
                                </TextBlock>
                            </DockPanel>
                            <TextBox  Text="{Binding SelectedDimensionValue}"
                                      MaxLength="5"
                                      BorderBrush="{DynamicResource SecondaryRegionBrush}">
                                <i:Interaction.Behaviors>
                                    <b:TextBoxNumericInputBehavior  Precision="0"
                                                                    InputMode="DigitInput"
                                                                    JustPositivDecimalInput="True" />
                                </i:Interaction.Behaviors>
                            </TextBox>
                        </StackPanel>
                        <Button  Style="{StaticResource ButtonIconCircular}"
                                 hc:IconElement.Geometry="{StaticResource AddGeometry}"
                                 Foreground="{DynamicResource SuccessBrush}"
                                 Command="{Binding AddDimensionCommand}"
                                 VerticalAlignment="Center"
                                 Margin="30,0"
                                 ToolTip="{StaticResource lngAdd}" />
                    </StackPanel>
                    <!--#endregion-->
                </StackPanel>

            </TabItem>
            <!--#endregion-->
            <!--#region H. Prices Tab Item -->
            <TabItem Header="{StaticResource lngPrices}"
                     Style="{StaticResource CTabItemStyle}">
                <StackPanel x:Name="PricesStackPanel"
                            Style="{StaticResource TabItemContainerStackPanel}">

                    <!--#region ComboBox Controls with Add Button -->
                    <DockPanel HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="20,0">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel>
                                <!--#region Price Trait ComboBox -->
                                <DockPanel>
                                    <cc:Icon ToolTip="{StaticResource lngNewPriceTooltip}"
                                             Style="{StaticResource CInfoTooltipIcon}" />
                                    <TextBlock x:Name="AddPriceTextBlock"
                                               Style="{StaticResource TitleTextBlockStyle}"
                                               Text="{StaticResource lngNewPrice}">
                                    </TextBlock>
                                </DockPanel>
                                <hc:ComboBox x:Name="AllPricesComboBox"
                                          ItemsSource="{Binding PriceTraits}"
                                          SelectedItem="{Binding SelectedPrice}"
                                          Width="200"
                                          Margin="0,0,0,20"
                                          VerticalAlignment="Center"
                                             hc:InfoElement.ShowClearButton="True">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Trait, Converter={StaticResource LocalizedStringConverter}}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </hc:ComboBox>
                                <!--#endregion-->
                                <!--#region Price Value TextBox -->
                                <DockPanel>
                                    <cc:Icon ToolTip="{StaticResource lngNewPriceValueTooltip}"
                                             Style="{StaticResource CInfoTooltipIcon}" />
                                    <TextBlock x:Name="AddPriceValueTextBlock"
                                               Style="{StaticResource TitleTextBlockStyle}"
                                               Text="{StaticResource lngNewPriceValue}">
                                    </TextBlock>
                                </DockPanel>
                                <TextBox Text="{Binding SelectedPriceValue}"
                                         MaxLength="5"
                                         BorderBrush="{DynamicResource SecondaryRegionBrush}">
                                    <i:Interaction.Behaviors>
                                        <b:TextBoxNumericInputBehavior Precision="2"
                                                                       InputMode="DecimalInput"
                                                                       JustPositivDecimalInput="True" />
                                    </i:Interaction.Behaviors>
                                </TextBox>
                                <!--#endregion-->
                            </StackPanel>
                            <StackPanel Margin="10,0,0,0">
                                <!--#region Referes To Group ComboBox -->
                                <DockPanel>
                                    <cc:Icon ToolTip="{StaticResource lngRefersToFinishGroupTooltip}"
                                             Style="{StaticResource CInfoTooltipIcon}" />
                                    <TextBlock x:Name="RefersToFinishGroupTextBlock"
                                               Style="{StaticResource TitleTextBlockStyle}"
                                               Text="{StaticResource lngRefersToFinishGroup}">
                                    </TextBlock>
                                </DockPanel>
                                <hc:ComboBox x:Name="RefersToFinishGroupComboBox"
                                          ItemsSource="{Binding PriceInfoAvailableGroups}"
                                          SelectedItem="{Binding SelectedPriceInfoFinishGroup}"
                                          Width="210"
                                          Margin="0,0,0,20"
                                          VerticalAlignment="Center"
                                          hc:InfoElement.ShowClearButton="True">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name, Converter={StaticResource LocalizedStringConverter}}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </hc:ComboBox>
                                <!--#endregion-->
                                <!--#region Referes To Finish ComboBox -->
                                <DockPanel>
                                    <cc:Icon ToolTip="{StaticResource lngRefersToFinishTooltip}"
                                             Style="{StaticResource CInfoTooltipIcon}" />
                                    <TextBlock x:Name="RefersToFinishTextBlock"
                                               Style="{StaticResource TitleTextBlockStyle}"
                                               Text="{StaticResource lngRefersToFinish}">
                                    </TextBlock>
                                </DockPanel>
                                <hc:ComboBox x:Name="RefersToFinishComboBox"
                                          ItemsSource="{Binding PriceInfoAvailableFinishes}"
                                          SelectedItem="{Binding SelectedPriceInfoFinish}"
                                          Width="210"
                                          Margin="0,0,0,20"
                                          VerticalAlignment="Center"
                                          hc:InfoElement.ShowClearButton="True">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Trait, Converter={StaticResource LocalizedStringConverter}}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </hc:ComboBox>
                                <!--#endregion-->
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <Button Style="{StaticResource ButtonIconCircular}"
                                    hc:IconElement.Geometry="{StaticResource AddGeometry}"
                                    Foreground="{DynamicResource SuccessBrush}"
                                    Command="{Binding AddPriceInfoCommand}"
                                    VerticalAlignment="Center"
                                    Margin="10,0,0,0"
                                    ToolTip="{StaticResource lngAdd}" />
                        </StackPanel>
                    </DockPanel>
                    <!--#endregion-->

                    <!--#region ListBox with Title -->
                    <StackPanel VerticalAlignment="Center">
                        <DockPanel>
                            <cc:Icon ToolTip="{StaticResource lngPricesTooltip}"
                                     Style="{StaticResource CInfoTooltipIcon}" />
                            <TextBlock x:Name="PricesTextBlock"
                                       Style="{StaticResource TitleTextBlockStyle}"
                                       Text="{StaticResource lngPrices}">
                            </TextBlock>
                        </DockPanel>
                        <ListBox ItemsSource="{Binding PricesInfo}"
                                 MinWidth="450"
                                 MinHeight="190"
                                 Width="auto">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel LastChildFill="True">
                                        <Button Style="{StaticResource ButtonIconCircular.Small}"
                                                Foreground="{DynamicResource DangerBrush}"
                                                hc:IconElement.Geometry="{StaticResource RemoveGeometry}"
                                                hc:IconElement.Height="8"
                                                BorderBrush="{DynamicResource DangerBrush}"
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor} , Path=DataContext.RemovePriceInfoCommand}"
                                                CommandParameter="{Binding .}" />
                                        <TextBlock Text="{Binding PriceTrait.Trait , Converter={StaticResource LocalizedStringConverter}}"
                                                   VerticalAlignment="Center"
                                                   TextAlignment="Center"
                                                   Margin="20,0"
                                                   Width="150" />
                                        <TextBlock Text="{Binding PriceInfoRefersToName , Converter={StaticResource LocalizedStringConverter}}"
                                                   VerticalAlignment="Center"
                                                   TextAlignment="Center"
                                                   Width="150" />
                                        <hc:Divider Orientation="Vertical"
                                                    LineStroke="{DynamicResource PrimaryBrush}" Margin="0,0"/>
                                        <TextBlock Text="{Binding PriceValue, StringFormat={}{0:0.00} €}"
                                                   VerticalAlignment="Center"
                                                   TextAlignment="Right"
                                                   Width="80" />
                                    </DockPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                    <!--#endregion-->
                    
                </StackPanel>

            </TabItem>
            <!--#endregion-->
        </TabControl>
        <!--#endregion-->

        <!--#region 10.Notes -->
        <DockPanel Grid.Row="10"
                   Grid.ColumnSpan="3"
                   Margin="0"
                   LastChildFill="True">
            <TextBlock Text="{StaticResource lngNotes}"
                       Style="{StaticResource CHeaderTextBlock}"
                       DockPanel.Dock="Top"
                       Margin="0,0,0,5" />
            <TextBox MaxLength="2000"
                     DockPanel.Dock="Top"
                     VerticalAlignment="Stretch"
                     Width="auto"
                     Height="50"
                     Padding="5"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     FontSize="12"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     d:Text="Test Notes"
                     Text="{Binding BaseDescriptiveEntity.BaseEntity.Notes, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
        </DockPanel>
        <!--#endregion-->

    </Grid>
</UserControl>
